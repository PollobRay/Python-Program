#:import Factory kivy.factory.Factory

<MyPopup@Popup>
    auto_dismiss:False
    size_hint: 0.6,0.2
    pos_hint:{'x':0.2,'y':0.5}
    title: "This is pop up window"

    BoxLayout:
        orientation:'vertical'
        size:root.width, root.height

        Label:
            text: 'Something in our Popup Box'
            font_size: 24
        Button:
            text:"close me"
            font_size: 24
            on_release: root.dismiss()

<MyLayout>
    BoxLayout:
        orientation:'vertical'
        size: root.width, root.height
        Label:
            text:"popup stuff"
            font_size:32

        Button:
            text: 'Popup window'
            font_size:32
            on_release:Factory.MyPopup().open()
