<Label>
    font_size: 30
    color: "red"
    bold: True

<Button>
    font_size: 20
    size_hint_y: None
    height: 200
    size_hint_x: None
    weight: 200


<MyGridLayout>
    GridLayout:
        cols: 1
        size:root.width, root.height #for make maximize as the window

        GridLayout:
            cols: 2

            Label:
                text:"Name"


            TextInput:
                id:name
                multiline:False

            Label:
                text:'food'

            TextInput:
                id:food
                multiline:False

        Button:
            text:"Submit"
            on_press:root.press()

